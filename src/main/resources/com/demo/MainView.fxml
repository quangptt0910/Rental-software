<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.MainController">
    <children>
        <HBox spacing="10">
            <TextField fx:id="searchBar" promptText="Search vehicles..." />
            <ChoiceBox fx:id="typeChoiceBox" />
            <Button text="Search" onAction="#handleSearch" />
        </HBox>
        <VBox fx:id="vehiclesVBox" spacing="10">
        </VBox>
    </children>
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
</VBox>
