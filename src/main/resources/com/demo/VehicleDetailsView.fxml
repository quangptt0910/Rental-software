<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.VehicleDetailsController" spacing="10">
    <Label text="Vehicle Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="vehicleIdLabel" text="Vehicle ID" />
    <Label fx:id="brandLabel" text="Brand" />
    <Label fx:id="modelLabel" text="Model" />
    <Label fx:id="typeLabel" text="Type" />
    <Label fx:id="priceLabel" text="Price Per Day" />
    <Button fx:id="reserveButton" text="Reserve" onAction="#handleReserve" />
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
