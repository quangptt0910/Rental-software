<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.MakeReservationController" spacing="10">
    <Label text="Make Reservation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="vehicleIdField" promptText="Vehicle ID" />
    <TextField fx:id="customerNameField" promptText="Customer Name" />
    <TextField fx:id="reservationDateField" promptText="Reservation Date (YYYY-MM-DD)" />
    <TextField fx:id="returnDateField" promptText="Return Date (YYYY-MM-DD)" />
    <Button text="Confirm Reservation" onAction="#handleConfirmReservation" />
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
